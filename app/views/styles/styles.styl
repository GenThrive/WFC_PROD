@import "colors"
@import "variables"

*
  box-sizing border-box

html, body
  margin 0
  height 100%

body
  font-family 'Source Sans Pro', "Helvetica Neue", Helvetica, Arial, sans-serif
  font-size font-size
  font-weight 300
  text-align center
  color color-txt
  background-color #bae1ec
  overflow-x hidden
  overflow-y auto

  #header
    position relative
    z-index 2

  #report
    position relative
    z-index 1

  #content
    position relative
    z-index 100
    padding 0 40px
    height 100%
    transition opacity 0.3s
    pointer-events none
    transform translate3d(0, 0, 0)

    .question-ui, #ui-welcome, ui-completion, *
      pointer-events auto

    &.gone
      transition all 1s ease-out
      visibility hidden
      opacity 0
      a, .button
        pointer-events none

    &.notGone 
      visibility visible !important
      transition all 1s ease-in !important
      opacity 1 !important

    @media screen-mobile-max
      padding 0

  #show-bubble 
    width 100px
    height 50px
    background rgba(255, 255, 255, .5)

canvas
  transform translate3d(0, 0, 0)


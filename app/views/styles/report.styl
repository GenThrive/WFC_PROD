#report-ui
  position relative

  .report-group
    background-color color-beige
    padding 10px
    border-bottom 1px solid #d5e9ea

  .report-item
    background-color white
    padding 10px
    border-bottom 1px solid color-turquoise-light

    img, h4, div, span
      display inline-block
      vertical-align middle

    .question-topic-icon
      width 30px
      height 30px
      margin-right 10px

    h4
      color color-turquoise
      font-weight 300
      vertical-align middle
      text-transform lowercase

      @media screen-desktop-small
        font-size 1.4em

    .edit-item
      font-size 2em
      cursor pointer
      color color-turquoise-text
      vertical-align middle
      float left

      @media screen-desktop-min
        &:hover
          color color-turquoise

    .description, .score, .average, .link
      vertical-align middle
      color #055fa3
      font-size 1.4em
      font-weight 400

    .description
      display block
      margin-left 30px
      vertical-align middle

    .score, .average
      font-size 2em
      font-weight 900

    .link
      font-weight 600
      color color-turquoise-text
      text-decoration underline

      @media screen-desktop-min
        &:hover
          color color-turquoise-light


#report-ui #report-table
  font-size 1rem

  .report-item, .report-group

    .row1
      display inline-block
      text-align left
      width 25%
      cursor pointer

      @media screen-desktop-min
        &:hover
          h4
            color color-turquoise-dark

    .row2
      display inline-block
      text-align left
      width 40%
    .row3
      display inline-block
      text-align center
      width 5%
    .row4
      display inline-block
      text-align center
      width 10%
    .row5
      display inline-block
      text-align center
      width 10%
    .row6
      display inline-block
      text-align center
      width 8%


  .thead
    background-color #e9e7e1
    color #938f83
    font-size 1.4em
    font-style normal
    font-weight 900

  .report-group
    font-size 1.4em
    font-style normal
    font-weight 600
    text-align left
    padding 8px 14px

    &#indoor-water-header
      color color-indoor
      background-color lighten(color-indoor, 80%)

    &#outdoor-water-header
      color color-outdoor
      background-color lighten(color-outdoor, 80%)

    &#virtual-water-header
      color color-virtual
      background-color lighten(color-virtual, 80%)


  #report-footer
    background-color #ebe3d1
    padding 20px
    position relative
    font-size 1rem
    height 200px
    z-index 1001


  #report-footer--email
      width 100%
      max-width 340px
      float left
      height 80px
      text-align left

      p
        text-align left
        font-size 1.4rem
        font-weight bold
        font-style normal
        margin 0
     
     complete 
        margin 0 auto 20px
        float none
       
      input.email-input
        border-radius 30px
        height 38px
        border none
        font-size 1.4em
        display inline-block
        width 240px
        font-weight 600
        padding 10px 20px
        position relative
        z-index 2
        vertical-align top
        margin 10px 0 0
        outline none
        user-select text

        &.error
          border 1px solid red
          color red

      .email-submit
        top -48px
        box-shadow none
        padding-left 100px
        position relative
        z-index 1
        left 155px
        height 38px
        width 180px
        display inline-block
        vertical-align top
        margin 10px 0 0
        line-height 1.3em

      #email-confirmation
        font-weight 600
        font-style normal
        color color-turquoise
        text-align left
        margin 8px 0
        padding 0

    #report-footer--social
      font-family "FontAwesome"
      padding 30px 0 0 0
      float right
  
    #report-footer--social a
      text-decoration none

    #report-footer--social .fa-3x
      font-style normal
      color #003f69
      padding 0 10px

    #report-footer--copyright
      z-index -2
      position relative
      clear left
      right auto
      bottom auto
      padding 0

        @media screen-mobile-max
          float right
          top 40px

    #report-footer--copyright p
      margin 4px 0
      font-size 1.2em

    #report-footer--copyright a
      font-weight 400
      color color-turquoise-text
      font-size 1.2rem
      padding-right 10px
      
    #report-footer--compare
      text-align left
      height 100px
      float left
      width 340px

    #report-footer--compare h3
      margin 0   
      margin-top 0     
    
    #email-form
      height 60px

  &.traveling
    padding-top 100px
    padding-bottom 200px

    .thead
      position fixed
      top 100px
      width 100%
      backface-visibility hidden
      transform translateZ(0)
      z-index 10

    #report-footer
      z-index 1001
      bottom 0
      width 100%
      backface-visibility hidden
      transform translateZ(0)

      @media screen-desktop-min
        position fixed

@media screen-mobile-max
  #report-ui
    font-size 0.5rem

    #report-table

      .report-item
        padding 0 10px 4px
        position relative

      .thead
        font-size 1rem
        text-align right

        .row1, .row2, .row6
          display none

        .row3, .row4, .row5
          width 20%
          text-align center
          vertical-align middle

      #report-list
        .report-item
          text-align left

          .row1
            width 100%
            padding 8px 4px

          .row2
            text-align left
            width 80%
            padding-left 9px

          .row3
            text-align center
            width 0%
            display none

          .row4
            text-align center
            width 15%
            vertical-align middle
            position absolute
            top 14px
            right 15%
            margin-right 25px

          .row5
            text-align right
            width 15%
            vertical-align middle
            position absolute
            top 14px
            right 20px
            text-align right

          .row6
            text-align right
            position absolute
            font-size 0.8em
            width 20%
            vertical-align middle
            right 14px
            margin-right 10px

      .report-group.thead
        top 50px

    #report-footer--social
      clear both
      width 100%

    #report-footer--copyright
      padding-top 100px
      clear both
      width 100%

#report-ui .report-item#report-household
  span.row4 span, span.row5 span
    display none

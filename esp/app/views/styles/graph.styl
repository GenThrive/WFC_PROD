#graph-ui
  position relative
  font-size 1rem
  width 100%
  margin-top 10px

  .graph-depth
    position absolute
    z-index 0
    width: 100%
    height 120px
    left 0
    right 0
    bottom 0
    background-color color-beige-dark
    padding 20px
    font-size 1.4em
    font-weight 600
    font-style normal
    color color-beige-text

    @media screen-mobile-max
      height 60px

    span
      display inline-block
      margin-top 70px

      @media screen-mobile-max
        display none

  h3
    width 33.333333333%
    float left
    position relative
    top 14px

    &.indoor
      color color-indoor

    &.outdoor
      color color-outdoor

    &.virual
      color color-virual

  .graph-bars-container
    position relative
    padding 80px 20px 20px
    height 100%

    .graph-bars
      position relative
      width 100%
      height 100%

      .graph-bar
        z-index 1
        position absolute
        cursor pointer
        border 1px solid color-water
        border-bottom-width 0
        border-top-left-radius 6px
        border-top-right-radius 6px
        border-bottom-left-radius 0px
        border-bottom-right-radius 0px
        z-index 1

        &:hover
          z-index 2

        &.negative
          border-color color-beige-dark
          border-bottom-width 1px
          border-top-width 0
          border-top-left-radius 0px
          border-top-right-radius 0px
          border-bottom-left-radius 6px
          border-bottom-right-radius 6px

        .graph-bar--bar
          position relative
          display none

        .graph-bar--info
          display none
          position absolute
          bottom 100%
          left 50%
          transform translateX(-50%)
          padding 10px 16px
          color white
          font-weight 600
          font-size 1.2em
          border-radius 16px
          margin-bottom 20px
          text-transform uppercase
          transition opacity 0.3s
          pointer-events none

          .graph-bar--score
            font-size 2.4em
            display block
            line-height 1em


          .tri
            position absolute
            left 50%
            top 100%
            transform translateX(-50%)
            display block
            width 0
            height 0
            border-top 10px solid color-bg
            border-left 10px solid transparent
            border-right 10px solid transparent

        &#pet-food
          .graph-bar--info
            left auto
            transform none
            right -16px
            border-bottom-right-radius 9px

            .tri
              left auto
              transform none
              right 10px

        &:hover
          .graph-bar--info
            display inline

        &.indoor-water
          background-color color-indoor
          .graph-bar--info
            background-color darken(color-indoor, 10%)
            .tri
              border-top-color darken(color-indoor, 10%)

        &.outdoor-water
          background-color color-outdoor
          .graph-bar--info
            background-color darken(color-outdoor, 10%)
            .tri
              border-top-color darken(color-outdoor, 10%)

        &.virtual-water
          background-color color-virtual
          .graph-bar--info
            background-color darken(color-virtual, 10%)
            .tri
              border-top-color darken(color-virtual, 10%)

@media screen-mobile-max
  #graph-ui
    font-size 0.7rem

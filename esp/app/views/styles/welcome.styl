#ui-welcome

  .s
    margin-bottom 20px

  .disclaimer
    padding 50px 0 50px 0

    p
      font-weight 400
      font-style normal
      font-size 1.2rem
      line-height 1.5em
    
  .footer
    text-align left
    margin 0 auto
    padding 0 20px
    text-align center

    p
      margin 4px 0
      font-size 1.2em

    a
      font-weight 400
      color color-turquoise-text
      font-size 1.2rem
      padding-right 10px

  .feature-left
    float left
    width 50%  
  
    p
      color #2F9194
      font-size 1.8rem
      line-height 1.5em

      a
        color #2F9194
        font-weight 600 

  .feature-right
    float right
    width 50%

    p
      color #2F9194
      font-size 1.8rem
      line-height 1.5em

      a
        color #2F9194
        font-weight 600 

  .social
    font-family "FontAwesome"
    padding 50px 0 20px 0
    clear both  
  
  .social a
    text-decoration none

  .fa-3x
    font-style normal
    color #003f69
    padding 0 10px

   #start-btn
    font-size 2em
    padding 20px 30px
    background-color #00bcb6

  .feature
    font-weight 500

  .divider-welcomePage
    border-top 1px solid #a7e3e0
    padding 10px 0 24px
    margin-top 50px  
    font-size 1rem

  .question-text
    font-weight 600
    font-size 3em

    a
      font-size 30px


  .caption 
    display block
    margin 0 0
    font-size 50%
    font-style normal
    color #2F9194
    font-weight 500  

  .dive-btn
    width 180px
    display block
    margin 6px auto
 
  
@media screen-mobile-max
  #ui-welcome
    font-size 0.9rem

    .disclaimer
      padding 30px 0 30px 0

    .footer
      position relative
      bottom auto
      padding 0 20px 20px
      text-align center

    .feature-left
        width 100%
        padding-bottom 30px       

    .feature-right
        width 100%

    .social
      padding-top 30px

  #start-btn
    width 82%
    padding 12px

      
.category-ui
  display inline-block
  vertical-align top
  position relative
  background-color white
  height 50px
  //width 360px
  width 400px
  border-radius 50px
  padding 0 10px 0 0px
  margin 0 0 6px
  color color-txt
  font-weight 600
  font-size 1.4em
  text-transform uppercase
  letter-spacing 0.03em
  line-height 3.2em
  cursor pointer
  user-select none
  box-shadow 0 6px rgba(0,0,0,0.1)
  transition width 0.3s ease-out
  overflow hidden

  &:hover
    background-color color-turquoise-light

  .category-status
    display none
    vertical-align middle
    background-color color-beige
    width 30px
    height 30px
    border-radius 20px
    position absolute
    left 10px
    top 10px
    box-shadow inset 0 6px rgba(0,0,0,0.1)

    .icon
      display none

  .category-title
    display inline-block
    vertical-align middle
    letter-spacing 0
    font-size 1em

  .category-selector
    display none

  &.active
    background-color color-turquoise-light
    color color-turquoise-text
    cursor default
    width 100%
    text-align left
    padding  0 10px 0 50px


    .category-status
      display inline-block
      background-color color-turquoise
      cursor pointer
      line-height 1.6em
      box-shadow none
      line-height 32px
      text-align center

      .icon
        display inline-block
        color color-turquoise-light
        vertical-align bottom

    .category-selector
      display block
      position absolute
      top 0
      right 0

      .frequency-selector
        height 50px
        margin 0
        padding 2px 8px 2px
        display block
        border-radius 50px
        box-shadow -4px 0 0 rgba(0,0,0,0.1)
        // border-left 4px solid color-turquoise-light

        .descriptor
          font-size 1.1rem
          margin 0 4px

        .ui-spinner-control
          margin 0 4px
          width 26px
          height 26px
          line-height 1.4em
          text-align center

          .icon
            font-size 1.6em

        .ui-spinner-display
          margin 0 4px
          font-size 2.1em

@media screen-desktop-small
  .category-container
    padding 0 10px

  .category-ui
    display block
    width auto
    margin 0 0 5px
    height 40px
    text-align center
    transition height 0.3s ease-out

    .category-status
      top 5px
      left 5px

    .category-title
      font-size 0.9em

    &.active
      position relative
      height 96px
      border-radius 20px

      .category-selector
        top 46px
        left 0
        right 0
        bottom 0

        .frequency-selector
          border-radius 6px
          box-shadow none
          width 100%
          text-align center

          .descriptor
            display inline-block
            margin 0
            font-size 0.8em

          .ui-spinner.rate
            .ui-spinner-display
              font-size 1.8em
              margin 0

          .ui-spinner.frequency
            .ui-spinner-display
              font-size 1.8em
              margin 0
